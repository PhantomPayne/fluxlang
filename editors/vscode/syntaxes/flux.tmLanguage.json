{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Flux",
  "scopeName": "source.flux",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#labels" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#functions" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.flux",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flux",
          "match": "\\b(fn|let|if|else|return|import|from|export)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.flux",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.flux",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.flux",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.tag.flux",
          "match": "#[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.flux",
          "match": "\\b(int|string|Table|Project)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipe.flux",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.arrow.flux",
          "match": "->"
        },
        {
          "name": "keyword.operator.flux",
          "match": "[+\\-*/=<>]"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.flux",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}
